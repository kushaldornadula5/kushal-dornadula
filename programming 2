#include <iostream>
using namespace std;

int main() {
    int choice;
    double temp, convertedTemp;

    cout << "Temperature Conversion Menu:";
    cout << "1. Celsius to Fahrenheit";
    cout << "2. Fahrenheit to Celsius";
    cout << "Enter your choice (1 or 2): ";
    cin >> choice;

    switch (choice) {
        case 1:
            cout << "Enter temperature in Celsius: ";
            cin >> temp;
            convertedTemp = (temp * 9.0 / 5.0) + 32;
            cout << temp << " Celsius = " << convertedTemp << " Fahrenheit" << endl;
            break;

        case 2:
            cout << "Enter temperature in Fahrenheit: ";
            cin >> temp;
            convertedTemp = (temp - 32) * 5.0 / 9.0;
            cout << temp << " Fahrenheit = " << convertedTemp << " Celsius" << endl;
            break;

        default:
            cout << "2" << endl;
    }

    return 0;
}
