#include <iostream>
using namespace std;

class Student {
    int roll;
    char name[50];
    float marks;

public:
    void getdata() {
        cout << "Enter Roll: ";
        cin >> roll;
        cin.ignore(); // to avoid newline left by previous input
        cout << "Enter Name: ";
        cin.getline(name, 50);
        cout << "Enter Marks: ";
        cin >> marks;
    }

    void putdata() {
        cout << "Roll: " << roll << endl;
        cout << "Name: " << name << endl;
        cout << "Marks: " << marks << endl;
    }
};

int main() {
    int n;
    cout << "Enter number of students: ";
    cin >> n;
    Student s[n];
    for(int i=0; i<n; i++) {
        cout << "Enter details for student " << i+1 << ":" << endl;
        s[i].getdata();
    }
    cout << "Displaying student details:" << endl;
    for(int i=0; i<n; i++) {
        cout << "Details of student " << i+1 << ":" << endl;
        s[i].putdata();
    }
    return 0;
}
